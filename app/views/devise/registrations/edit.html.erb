<div class="row">
  <div class="col m6 offset-m3 center">

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field">
        <%= f.text_field :name, :id => "name", :class => "validate", :placeholder => "Name", autofocus: true %>
      </div>

      <div class="input-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "Email"%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "off", :id => "password", :class => "validate", :placeholder => "New Password (leave blank if you wish to keep old password)" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :id => "password_confirmation", :class => "validate", :placeholder => "Confirm New Password" %>
      </div>

      <div class="input-field">
        <%= f.password_field :current_password, autocomplete: "off", :id => "current_password", :class => "validate", :placeholder => "Your Current Password" %>
      </div>

    <button class="btn waves-effect waves-light" type="submit" name="action">Update</button>
    <%= link_to "Back", :back, :class => "btn waves-effect waves-light" %>
    <% end %>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn red waves-effect waves-light" %></p>

  </div>
</div>    
