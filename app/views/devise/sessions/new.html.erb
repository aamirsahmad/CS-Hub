<div class="row">
  <div class="col m6 offset-m3 center">
    
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :id => "email", :class => "validate", :placeholder => "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <button class="btn waves-effect waves-light" type="submit" name="action">Login</button>
      <%= link_to "Forgot password", new_user_password_path, :class => "btn waves-effect waves-light" %>
    <% end %>

  </div>
</div>
