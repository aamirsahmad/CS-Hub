<div class="row" data-no-turbolink="true">
  <span>
    <div class="teal lighten-1 center-align z-depth-1 valign-wrapper">
      <h1 class = "valign center-block thin white-text">All Projects</h1>
    </div>
  </span>
  <div class="container">
    <% @projects.order("id desc").each do |project| %>
          <div class="col s12 m6 l4">
            <div class="container"  style = "width: 100%;" >
              <div class="card hoverable" style="height:405px; min-width: 50%; max-width: 100%">
              <%= link_to project do %>
                <div class="card-image waves-effect-waves-block waves-light">
                  <%= image_tag project.image, :class => "img-responsive", :style => "min-height: 50%; max-height: 290px;" %>
                </div>
              <% end %>
                <div class="card-content">
                  <span class="card-title grey-text text-darken-4">
                    <%= project.trimmedName %>
                  </span>
                  <div class="card-actions center">
                    <%= link_to project do %>
                      <button class="waves-effect waves-light btn"><i class="material-icons left">forward</i>Enter</button>
                    <% end %>
                      <button class="waves-effect waves-light btn-flat activator">details</button>
                  </div>
                </div>
                <div class="card-reveal">
                      <span class="card-title grey-text text-darken-4"><%= project.name %><i class="material-icons right">close</i></span>
                      <p><%= project.content %></p>
                </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
