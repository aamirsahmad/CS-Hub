<div class="row" data-no-turbolink="true">

  <br/>
  <h4 class="center-align">Subscribed Projects</h4>

  
  <% if @projects.count > 0 %>

  <% @projects.each do |project| %>
      <%= link_to project do %>
        <div class="col s12 m6">
          <div class="card hoverable">
            <div class="card-image waves-effect-waves-block waves-light">
              <%= image_tag project.image %>
            </div>
            <div class="card-content">
              <span class="card-title grey-text text-darken-4">
                <%= project.name %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
  <% end %>

  <% else %>
    <div class="center">
      <h5>You are not subscribed to any projects yet.</h5>
      <%= link_to "Go to all Projects", root_path, class: "btn btn-primary"%>
    </div>
  <% end %>
</div>